<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="rezzza.process_one.transport.guzzle.class">Rezzza\ProcessOneBundle\Transport\GuzzleTransport</parameter>
    </parameters>

    <services>
        <service id="rezzza.process_one.guzzle" class="Guzzle\Http\Client"/>

        <service id="rezzza.process_one.transport.guzzle" class="%rezzza.process_one.transport.guzzle.class%">
            <argument type="service" id="rezzza.process_one.guzzle"/>
        </service>
    </services>

</container>
